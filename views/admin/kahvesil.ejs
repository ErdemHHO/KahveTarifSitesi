<html>
  <head>
    <%- include("./partials/head")  %>  
   </head>
  <body>
    <%- include("./partials/sidebar")  %>  

    <div class="p-5 m-5">
        <main>
            <div class="text-center border-bottom">
                <h4>KAHVE SİL</h4>          
            </div>
            <form method="post" class="needs-validation pt-5" novalidate>
                <div class="row g-5 mx-5">
                    <div class="col">
                        <div class="row g-3">
                        <div class="col-12">
                            <label for="kahveAdi" class="form-label">Kahve Adi:</label>
                            <div class="input-group has-validation">
                            <input name="kahveAdi" type="text" class="form-control" id="kahveAdi" placeholder="" required>
                            <div class="invalid-feedback">
                                Kahve adı boş geçilemez.
                            </div>
                            </div>
                        </div>
                        <button class="w-100 btn btn-success btn-lg mx-2" type="submit">Kaydet</button> <br><br>
                        <% if (typeof message != "undefined") { %>
                            <div class="alert alert-<%= renk %> m-3">  
                             <%= message %> 
                           </div>
                        <% } %>
                    </div>
                </div>
            </form>
        </main> 
    </div>

    <script src="../js/form-validation.js"></script>    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
  </body>
</html>