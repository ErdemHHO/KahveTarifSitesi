<html>
  <head>
    <%- include("./partials/head")  %>  
   </head>
  <body>
    <%- include("./partials/sidebar")  %>  

    <div class="px-5">
        <main class="px-5">
            <div>
                <table class="table table-bordered  table-hover p-5 m-5" id="myTable">
                    <h4 class="text-center pt-3">KAYITLI KAHVELER</h4><hr/>
                        <thead class="table-success">
                            <tr>
                                <th class="text-center">KAHVE NO</th>
                                <th class="text-center">KAHVE ADİ</th>
                                <th class="text-center">KATEGORİ ADİ</th>
                            </tr>
                        </thead>
                            <tbody class="text-center">
                                <% kahveler.forEach(kahve => { %>
                                 <tr>
                                    <td>
                                        <%= kahve.dataValues.kahve_id %> 
                                    </td>
                                    <td>
                                        <%= kahve.dataValues.kahveAdi %> 
                                    </td>
                                    <td>
                                        <%= kahve.dataValues.kategori_id %> 
                                    </td>
                                </tr>
                                <% }) %>
                                 
                            </tbody>
                </table>
            </div>
        </main> 
    </div>

    <script type="text/javascript" src="https://cdn.datatables.net/v/bs5/jq-3.6.0/jszip-2.5.0/dt-1.12.1/b-2.2.3/b-colvis-2.2.3/b-html5-2.2.3/b-print-2.2.3/datatables.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
    <script>
        $('#myTable').DataTable({
            lengthMenu:[15,30,50,100],
            language:{
                url:'https://cdn.datatables.net/plug-ins/1.12.1/i18n/tr.json',
                "info": "Toplam _TOTAL_ Kayıt",
                "lengthMenu":" Kayıt : _MENU_ ",
                "paginate": {
                    "first":      "First",
                    "last":       "Last",
                    "next":       ">",
                    "previous":   "<"
                }} }); 
    </script>
  </body>
</html>