<html>
  <head>
    <%- include("./partials/head")  %>  
   </head>
  <body>
    <%- include("./partials/sidebar")  %>  

    <div class="p-3">
        <main>
            <div class="text-center border-bottom">
                <h4>KAHVE GUNCELLE</h4>          
            </div>
            <form method="post" class="needs-validation pt-2" novalidate>
                <div class="row g-5 mx-5">
                        <div class="col-sm-6">
                            <label for="kategoriNo" class="form-label">Kategori:</label>
                            <input name="kategoriNo" type="text" class="form-control" id="kategoriNo" placeholder="" value="" required>
                            <div class="invalid-feedback">
                            Kahve kategori boş geçilemez.
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <label for="kahveAdi" class="form-label">Kahve Adı:</label>
                            <input name="kahveAdi" type="text" class="form-control" id="kahveAdi" placeholder="" value="" required>
                            <div class="invalid-feedback">
                            Kahve adi boş geçilemez.
                            </div>
                        </div>
                        <div class="col-12">
                            <label for="kahveTarif" class="form-label">Kahve Tarif:</label>
                            <textarea id="editor" name="kahveTarif" class="form-control" rows="10" required></textarea>
                            <div class="invalid-feedback">
                            Kahve tarifi boş geçilemez.
                            </div>
                        </div>
                        <div class="col-12">
                            <label for="kahveFoto" class="form-label">Fotoğraf yükleyin:</label>
                            <input type="file" accept="application/jpg" name="kahveFoto" class="btn btn-dark" style="width:250px;" required>
                            <div class="invalid-feedback">
                            Kahve fotoğrafı boş geçilemez.
                            </div>
                        </div>
                        <button class="w-100 btn btn-success btn-lg mx-2" type="submit">Kaydet</button> <br><br>
                        <% if (typeof message != "undefined") { %>
                            <div class="alert alert-<%= renk %> m-3">  
                             <%= message %> 
                           </div>
                        <% } %>
                </div>
            </form>
        </main> 
    </div>

    <script src="../js/form-validation.js"></script>
    <script src="https://cdn.ckeditor.com/ckeditor5/35.0.1/classic/ckeditor.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
    <script>
        ClassicEditor
            .create( document.querySelector( '#editor' ) )
            .catch( error => {
                console.error( error );
            } );
        </script>
  </body>
</html>