<html>
  <head>
    <%- include("./partials/head")  %>  
   </head>
  <body>
    <%- include("./partials/sidebar")  %>  

    <div class="p-5 m-5">
        <main>
            <div class="text-center border-bottom">
                <h4>YENİ KULLANICI EKLEYİN</h4>          
            </div>
            <form method="post" class="needs-validation pt-5" novalidate>
                <div class="row g-5 mx-5">
                    <div class="col">
                        <div class="row g-3">
                        <div class="col-sm-6">
                            <label for="kulAdi" class="form-label">Adı:</label>
                            <input name="kullaniciAd" type="text" class="form-control" id="kulAdi" placeholder="" value="" required>
                            <div class="invalid-feedback">
                            Kullanıcının adı boş geçilemez.
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <label for="kulSoyad" class="form-label">Soyadı:</label>
                            <input name="kullaniciSoyad" type="text" class="form-control" id="kulSoyad" placeholder="" value="" required>
                            <div class="invalid-feedback">
                            Kullanıcının soyadı boş geçilemez.
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <label for="kulSifre" class="form-label">Şifre:</label>
                            <input name="kullaniciParola" type="password" class="form-control" id="kulSifre" placeholder="" value="" required>
                            <div class="invalid-feedback">
                            Kullanıcının şifresi boş geçilemez.
                            </div>
                        </div>
                        <div class="col-md-6">
                            <label for="kulEmail" class="form-label">E-Posta:</label>
                            <div class="input-group has-validation">
                            <input name="kullaniciMail" type="email" class="form-control" id="kulEmail" placeholder="" required>
                            <div class="invalid-feedback">
                                E-Posta boş geçilemez veya düzgün bir E-posta giriniz.
                            </div>
                            </div>
                        </div>
                        <button class="w-100 btn btn-success btn-lg mx-2" type="submit">Kaydet</button> <br><br>
                        <% if (typeof message != "undefined") { %>
                            <div class="alert alert-<%= renk %> m-3">  
                             <%= message %> 
                           </div>
                        <% } %>
                    </div>
                </div>
            </form>
        </main> 
    </div>

    <script src="../js/form-validation.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
  </body>
</html>